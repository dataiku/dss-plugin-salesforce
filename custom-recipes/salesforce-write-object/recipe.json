{
    "meta" : {
        "label": "Salesforce - Write recipe",
        "description": "Create or upate records of an Object"
    },

    "kind": "PYTHON",

    "inputRoles": [
        {
            "name": "incoming_dataset_name",
            "label": "Source dataset",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],

    "outputRoles": [
        {
            "name": "main",
            "label": "Dataset with results",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],

    "params": [
        {
            "name": "auth_type",
            "label": "Credentials",
            "type": "SELECT",
            "selectChoices": [
                {
                    "value": "basic_login",
                    "label": "Via plugin preset"
                },
                {
                    "value": "legacy",
                    "label": "Via JSON token (legacy)"
                }
            ],
            "mandatory": true,
            "defaultValue": "basic_login"
        },
        {
            "name": "basic_login",
            "label": "Salesforce login",
            "type": "PRESET",
            "parameterSetId": "salesforce-login",
            "visibilityCondition": "model.auth_type == 'basic_login'"
        },
        {
            "name": "token",
            "label": "JSON token",
            "description": "JSON, or path to a file containing the JSON",
            "type": "STRING",
            "mandatory" : true,
            "defaultValue": "${dip.home}/SalesforceToken.json",
            "visibilityCondition": "model.auth_type == 'legacy'"
        },
        {
            "name": "object_name",
            "label": "Object to update",
            "type": "STRING",
            "mandatory": true
        }
    ]
}
