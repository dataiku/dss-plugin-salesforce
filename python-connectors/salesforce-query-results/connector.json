{
    "meta" : {
        "label" : "Salesforce - SOQL query",
        "description" : "A connector to get the results of a specified SOQL query"
    },

    "readable" : true,
    "writable" : false,

    "params": [
        {
            "name": "sep1",
            "label": "Authentication",
            "type": "SEPARATOR"
        },
        {
            "name": "auth_type",
            "label": "Authentication method",
            "type": "SELECT",
            "selectChoices": [
                {
                    "value": "oauth",
                    "label": "Salesforce SSO (per-user)"
                },
                {
                    "value": "basic_login",
                    "label": "Salesforce login"
                },
                {
                    "value": "legacy",
                    "label": "JSON token (legacy)"
                }
            ],
            "mandatory": true,
            "defaultValue": "basic_login"
        },
        {
            "name": "oauth",
            "label": "Salesforce preset",
            "type": "PRESET",
            "parameterSetId": "oauth-credentials",
            "visibilityCondition": "model.auth_type == 'oauth'"
        },
        {
            "name": "basic_login",
            "label": "Salesforce login",
            "type": "PRESET",
            "parameterSetId": "salesforce-login",
            "visibilityCondition": "model.auth_type == 'basic_login'"
        },
        {
            "name": "token",
            "label": "JSON token",
            "description": "JSON, or path to a file containing the JSON",
            "type": "STRING",
            "mandatory" : true,
            "defaultValue": "${dip.home}/SalesforceToken.json",
            "visibilityCondition": "model.auth_type == 'legacy'"
        },
        {
            "name": "sep2",
            "label": "Parameters",
            "type": "SEPARATOR"
        },
        {
            "name": "query",
            "label": "SOQL query",
            "description": "Example: SELECT Name, Account.Name, Amount, CloseDate, Account.Id, AccountId, Owner.Id, OwnerId FROM Opportunity ORDER BY Name ASC",
            "type": "TEXTAREA",
            "mandatory" : true
        },
        {
            "name": "result_format",
            "label": "Choose the output format:",
            "type": "SELECT",
            "selectChoices": [
                {
                    "value": "readable",
                    "label": "Readable with columns"
                },
                {
                    "value": "json",
                    "label": "JSON"
                }
            ],
            "mandatory": true,
            "defaultValue": "readable"
        }
    ]
}